@model IEnumerable<Minesweeper_350.Models.ButtonModel>

<style>

    .button {
        width: 75px;
    }

    .button-image {
        width: 65px;
        position: center;
    }

    .button-container {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }
</style>

@{
    string[] names = { "oringinal.png", "clicked.png" };

<form>
    <div class="button-container">

        @for (int i = 0; i < Model.Count(); i++)
        {
            if (@i % Math.Sqrt(Model.Count()) == 0)
            {
                <div class="line-break"> </div>
            }

            <div class="Button" id=@i>
                <button class="button" type="submit" value=@i name="buttonNumber" asp-controller="Minesweeper" asp-action="HandleButtonClick">
                    <img class="button-image" src="~/img/@names[Model.ElementAt(i).ButtonState]" />
                    <div class="center">

                    </div>
                </button>

            </div>
        }
    </div>


</form>
}